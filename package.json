{
  "name": "wms-backend",
  "version": "1.0.0",
  "description": "Warehouse Management System Backend API",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "local:dev": "tsx watch src/index.ts",
    "local:start": "node dist/src/index.js",
    "vercel-build": "npm run build",
    "local:test": "vitest --no-watch",
    "test:integration": "NODE_ENV=test vitest tests/integration",
    "db:migrate:prod": "NODE_ENV=production tsx src/config/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/config/migrate.ts",
    "db:seed": "tsx src/config/seed.ts",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "warehouse",
    "inventory",
    "management",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@libsql/client": "^0.15.10",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "helmet": "^7.1.0",
    "hono": "^4.5.0",
    "jose": "^6.0.12",
    "nanoid": "^5.1.5",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.2.0",
    "tsx": "^4.16.0"
  }
}
